<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_170"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_170"
        android:scaleType="centerCrop"
        android:src="@drawable/main_header"
        android:id="@+id/header_bg"
        android:contentDescription="@string/header_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_75"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="@dimen/width_75"
            android:layout_height="@dimen/height_75"
            android:layout_gravity="center"
            android:contentDescription="@string/avatar"
            android:src="@drawable/ic_nav_header"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/header_user"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_75"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_title_normal"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:gravity="center_vertical" />
    </LinearLayout>
</RelativeLayout>