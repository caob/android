<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:orientation="horizontal"
        android:background="@drawable/centers_gradient">

        <ImageView
            android:layout_width="@dimen/width_50"
            android:layout_height="@dimen/height_50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_10"
            android:src="@drawable/inbox_settings"
            android:padding="@dimen/margin_12"
            android:contentDescription="@string/centers_settings" />
    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/centers_map_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_170" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/centers_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>